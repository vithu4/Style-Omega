<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.styleomega.styleomegafashion.Login"
    android:background="@drawable/loginandreg2"
    android:scaleType="centerCrop">

    <TextView
        android:id="@+id/TVPassword"
        android:layout_width="121dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/TVUsername"
        android:layout_below="@+id/TVUsername"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/TVUsername"
        android:layout_width="121dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/BLogin2"
        android:layout_below="@+id/guideline"
        android:layout_marginTop="38dp"
        android:text="Username"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/ETUsername"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/TVUsername"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="112dp" />

    <Button
        android:id="@+id/BLogin2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="GoToLogin"
        android:text="Login"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="204dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/ETPassword"
        android:layout_width="235dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/TVPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-152dp"
        tools:layout_editor_absoluteY="-195dp" />

    <Button
        android:id="@+id/BtnFrgtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/BLogin2"
        android:layout_marginTop="14dp"
        android:onClick="GoToForgotPassword"
        android:text="Forgot Password" />
</RelativeLayout>
