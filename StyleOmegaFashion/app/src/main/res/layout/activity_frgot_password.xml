<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.styleomega.styleomegafashion.frgotPassword"
    android:background="@drawable/loginandreg2"
    android:scaleType="centerCrop">


    <TextView
        android:id="@+id/TVPasswordFrgtPassword"
        android:layout_width="121dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/TVUsernameFrgtPassword"
        android:layout_below="@+id/TVUsernameFrgtPassword"
        android:layout_marginTop="24dp"
        android:text="New Password"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/TVUsernameFrgtPassword"
        android:layout_width="121dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/BtnchangePassword"
        android:layout_below="@+id/guideline"
        android:layout_marginTop="38dp"
        android:text="Username"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/ETFrgtPassUsername"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="112dp"
        android:layout_alignTop="@+id/TVUsernameFrgtPassword"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/BtnchangePassword"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETFrgtNewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="GoToForgotPasswordUpdate"
        android:text="Change Password"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="204dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/ETFrgtNewPassword"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/TVPasswordFrgtPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-152dp"
        tools:layout_editor_absoluteY="-195dp" />



</RelativeLayout>
